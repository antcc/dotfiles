# Init function
.First <- function() {
  if (interactive())
    utils::loadhistory("~/.Rhistory")
}

# Exit function
.Last <- function() {
  if (interactive())
    utils::savehistory("~/.Rhistory")
}

# Set CRAN mirror:
local({
  r <- getOption("repos")
  r["CRAN"] <- "https://cloud.r-project.org/"
  options(repos = r)
})

# Prompt
options(prompt = "R> ")

# Set working directory
#setwd("~/DGIIM/5º/2cuatrimestre/Estadística Computacional/Prácticas/practicas-r")

# Strings
#options(stringsAsFactors=F)

# Errors
options(showWarnCalls=T, showErrorCalls=T)
