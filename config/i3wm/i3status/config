# i3status config file

general {
	colors = true
	interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
	 format_up = "  %essid"
	 format_down = " "
}

battery all {
	format = "%status  %percentage"
	format_down = "No battery"
        status_chr = ""
        status_bat = ""
        status_full = ""
        low_threshold = 10
	last_full_capacity = true
	threshold_type = "percentage"
}

volume master {
        format = "%  %volume"
        format_muted = "  %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
       format = "%d-%m-%Y %H:%M"
}